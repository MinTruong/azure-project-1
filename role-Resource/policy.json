{
    "properties": {
        "displayName": "Resource",
        "description": "enable Microsoft.Resources write",
        "policyType": "Custom",
        "mode": "all",
        "metadata": {
            "version": "1.0.1"
          }
        },
        "policyRule": {
            "if": {
                "allOf": [{
                        "not":{
                        "field": "type",
                        "equals": "Microsoft.Resources/subscriptions/resourcegroups/write"
                        }
                    }
                ]
            },
            "then": {
                "effect": "deny"
            }
        }
    }
}